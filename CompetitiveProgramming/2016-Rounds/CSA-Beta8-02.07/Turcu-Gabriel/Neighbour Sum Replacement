#include<stdlib.h>
#include<stdio.h>
#include<fstream>
#include<string.h>
#include<vector>
#include<iostream>
#include<algorithm>
using namespace std;
int n, v[1010], v1[1010],i;

int main()
{
	cin >> n;
	for (i = 1; i <= n; i++)
		cin >> v[i];
	for (i = 2; i <= n - 1; i++)
		v1[i] = v[i - 1] + v[i + 1];
	v1[1] = v[2] + v[n];
	v1[n] = v[1] + v[n - 1];
	cout<<n<<endl;
	for (i = 1; i <= n; i++)
		cout<< v1[i]<<" ";
	return 0;
}
